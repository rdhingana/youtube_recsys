# PostgreSQL
POSTGRES_USER=recsys
POSTGRES_PASSWORD=recsys_password
POSTGRES_DB=youtube_recsys
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (constructed from above)
DATABASE_URL=postgresql://recsys:recsys_password@localhost:5432/youtube_recsys

# Model paths
INDEX_PATH=models/retrieval/saved/simple_faiss_index

# LLM Provider (auto, ollama, openai, anthropic, mock)
# "auto" will try: Ollama (free) > OpenAI > Anthropic > Mock
LLM_PROVIDER=auto

# Ollama (FREE - runs locally)
# Install from: https://ollama.ai
# Then run: ollama serve && ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI (paid)
OPENAI_API_KEY=

# Anthropic (paid)
ANTHROPIC_API_KEY=
